import { Injectable, NotFoundException } from '@nestjs/common';
import { PrismaService } from '../../prisma/prisma.service';
import { CreateProductDto } from './dto/create-product.dto';
import { UpdateProductDto } from './dto/update-product.dto';

@Injectable()
export class ProductsService {
  constructor(private prisma: PrismaService) {}

  async create(dto: CreateProductDto) {
    return this.prisma.product.create({
      data: {
        sku: dto.sku,
        name: dto.name,
        barcode: dto.barcode,
        costPrice: dto.costPrice,
        sellPrice: dto.sellPrice,
        taxRate: dto.taxRate,
        stockQty: 0,
        reorderLevel: dto.reorderLevel,
        categoryId: dto.categoryId,
        storeId: dto.storeId,
        description: dto.description,
      },
      include: { category: true },
    });
  }

  async findAll(storeId: string, search?: string) {
    return this.prisma.product.findMany({
      where: {
        storeId,
        isActive: true,
        OR: search
          ? [
              { name: { contains: search, mode: 'insensitive' } },
              { sku: { contains: search, mode: 'insensitive' } },
              { barcode: { contains: search, mode: 'insensitive' } },
            ]
          : undefined,
      },
      include: { category: true },
      orderBy: { name: 'asc' },
    });
  }

  async findOne(id: string) {
    const product = await this.prisma.product.findUnique({
      where: { id },
      include: { category: true, stockMovements: { take: 10, orderBy: { createdAt: 'desc' } } },
    });

    if (!product) {
      throw new NotFoundException('Product not found');
    }

    return product;
  }

  async update(id: string, dto: UpdateProductDto) {
    const product = await this.prisma.product.findUnique({ where: { id } });
    if (!product) {
      throw new NotFoundException('Product not found');
    }

    return this.prisma.product.update({
      where: { id },
      data: { ...dto },
      include: { category: true },
    });
  }

  async delete(id: string) {
    const product = await this.prisma.product.findUnique({ where: { id } });
    if (!product) {
      throw new NotFoundException('Product not found');
    }

    return this.prisma.product.update({
      where: { id },
      data: { isActive: false },
    });
  }

  async adjustStock(id: string, qty: number) {
    const product = await this.prisma.product. findUnique({ where: { id } });
    if (!product) {
      throw new NotFoundException('Product not found');
    }

    // Create stock movement record
    await this.prisma.stockMovement.create({
      data: {
        productId: id,
        storeId: product.storeId,
        qty: Math.abs(qty),
        type: qty > 0 ? 'IN' : 'OUT',
      },
    });

    // Update stock
    return this.prisma.product.update({
      where: { id },
      data: { stockQty: product.stockQty + qty },
    });
  }

  async getLowStockProducts(storeId: string) {
    return this.prisma.product.findMany({
      where: {
        storeId,
        isActive: true,
      },
      include: { category: true },
    }). then(products => 
      products.filter(p => p.stockQty <= p.reorderLevel)
    );
  }
}